{
    "plugins": ["react"],
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017,
        "ecmaFeatures": {
          "jsx": true
        }
    },
    "rules": {
        "indent": [
            2,
            2
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "quotes": [
            2,
            "single", "avoid-escape"
        ],
        "prefer-template": [
            2
        ],
        "semi": [
            2,
            "always"
        ],
        "jsx-quotes": ["error", "prefer-double"]
    }
}
