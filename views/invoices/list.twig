{% extends 'layout.twig' %}

{% block title %}Factures{% endblock %}

{% block body %}

  <h1>Factures</h1>

  <table>
    <thead>
      <tr>
        <th>Numéro</th>
        <th>Client</th>
        <th>Montant</th>
        <th>Date</th>
        <th>Payée le</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for invoice in invoices %}
        <tr>
          <td>
            <a href="/invoices/{{ invoice._id }}">{{ invoice.number }}</a>
          </td>
          <td>{{ invoice.customer.name }}</td>
          <td>{{ invoice.amount|currency }}</td>
          <td>
            {% if invoice.date %}
              {{ invoice.date|date('d/m/Y') }}
            {% endif %}
          </td>
          <td>
            {% if invoice.payed %}
              {{ invoice.payedAt|date('d/m/Y') }}
            {% endif %}
          </td>
          <td>
            <a class="button" href="/invoices/{{ invoice._id }}/edit">modif.</a>
            <form method="post" action="/invoices/{{ invoice._id }}/delete">
              <button>×</button>
            </form>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

{% endblock %}
